<div class="container">
    @using (Html.BeginForm("GetBillingInfo", "Billing", FormMethod.Get))
    {
        <div class="row">
            <div class="col-md-4" style="margin-bottom:4px">
                @*@Html.DropDownList("PatientList", null, "Select Patient", new { @class = "form-control" })*@
                <label>Start Date</label>
                <input type="date" name="BeginDate" value="" class="form-control" />
            </div>
            <div class="col-md-4" style="margin-bottom:4px">
                <label>Start Date</label>
                <input type="date" name="EndDate" value="" class="form-control" />
            </div>
            <div class="col-md-4" style="margin-bottom:4px">
                <label></label>
                <input type="submit" value="Search" class="btn-primary" />
            </div>
        </div>
    }

    <div class="container-fluid">
        <table id="mytable" class="table table-striped table-bordered w-auto text-xsmall" style="width:100%">
            <thead>
                <tr>
                    <th>Sr.No</th>
                    <th>Pid</th>
                    <th>PatientName</th>
                    <th>Investigation</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Discount</th>
                    <th>Expenses</th>
                    <th>Referal</th>
                    <th>Due</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sno = 0;

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno

                            </td>
                            <td>
                                @item.PId
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.PatientName)
                            </td>
                            <td>
                                @Html.HiddenFor(m => item.PId)
                                @item.Investigation
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Discount)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Expenses)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ReferalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Due)
                            </td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <span style="color:darkgreen">Paid</span>
                                }
                                else
                                {
                                    <span style="color:red">Due</span>
                                }
                            </td>
                            <td>
                                <a href="~/Billing/UpdateBillingInfo/@item.BillId"><i class="fa fa-pencil"></i></a>
                            </td>
                        </tr>
                                    }}
            </tbody>
