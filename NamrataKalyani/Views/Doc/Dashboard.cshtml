@model IEnumerable<NamrataKalyani.Models.PatientInfoModel>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dashboard</h2>
<script>
    function redirectToPatienetRegistration() {

        window.location = "http://localhost:54429/Doc/PatientInfo";
    }

</script>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="button" value="Create New Patient" class="btn btn-default" onclick="redirectToPatienetRegistration()" />
    </div>
</div>

<h2>Existing Patient Find Here</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-default ">
                <div class="panel-heading headingcolor">

                    @Html.Label("Dashbord")


                </div>
                <div class="panel-body bagraoung">

                    <div class="form-group">
                        @Html.Label("NameOrMobile", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBox("Name_Mobile",null, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessage("NameOrMobile", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Search" name="Dashboard" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}

<table class="table table-condensed table-striped">
    <tr>
        <th>
            Patient Name
        </th>
        <th>
            Mobile Number
        </th>
        <th>
            Date
        </th>
        <th> Action </th>

    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.pname
                </td>
                <td>
                    @item.mobileNo
                </td>
                <td>
                    @item.CreatedOn
                </td>

                <td>
                    <a href="~/Doc/GetAllReportsByPatientId?Pid=@item.pid">View Reports</a>  
                </td>
            </tr>
        }
    }
</table>


