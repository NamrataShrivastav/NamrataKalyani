@model NamrataKalyani.Models.ReportByPidModel
@{
    ViewBag.Title = "EditPrintReport";
}
<h2>EditPrintReport</h2>
<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .error {
        color: red;
    }

    .tox tox-tinymce {
        width: 100% !important;
        height: 400px !important;
    }
</style>
<link href="~/Content/prism.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ReportDataModel</h4>
        <hr />
        <input type="hidden" name="ReportId" value=@Model.ReportId />
        <input type="hidden" name="BillId" value=@Model.BillId />
        <div>
            <textarea id="codesample" name="Description">
                @Model.Description
            </textarea>
            @*@Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { id = "codesample" } })*@
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@Scripts.Render("~/bundles/jquery")
<script src="https://cdn.tiny.cloud/1/qagffr3pkuv17a8on1afax661irst1hbr4e6tbv888sz91jc/tinymce/5-stable/tinymce.min.js"></script>
<script src="~/Scripts/prism.js"></script>
<script type="text/javascript">
    tinymce.init({ selector: 'textarea', width: 500 });
</script>

