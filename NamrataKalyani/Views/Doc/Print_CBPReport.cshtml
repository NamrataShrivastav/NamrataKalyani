        <div style="padding: 10px; background: cadetblue !important; color: white; width: 80% ">
            <p style="text-align:center">Terms & Conditions</p>
            @Model.descriptions
        </div>
        <div style="padding: 5px; background: coral !important; color: white; width: 20% ">
            <p style="text-align:center">
                ADDRESS:
            </p>
            @Model.fullAddress
        </div>

    </div>
</div>