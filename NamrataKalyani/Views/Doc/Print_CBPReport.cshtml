@model NamrataKalyani.Models.ComputerBloodPictureReportModel
@{
    ViewBag.Title = "Computer Blood Picture Report";
}

    @Html.ActionLink("Print", "Print_CBPReport1", new { id=Model.pid})



<div>
    <table width="100%" height="20%">
        <tr>
            <td>
                <img src="~/Akbar.png" width="400" height="90">
            </td>


            <td>
                @Html.Label(Model.Specilization, new { style = "color:red !important" })<br />
                @Html.Label(Model.Doc_Name, new { style = "color:cadetblue !important" })  <br />
                @Html.Label(Model.Qualification, new { style = "color:cadetblue !important" })  <br />

            </td>

            <td>
                @Html.Label(Model.Specilization, new { style = "color:red !important" })<br />
                @Html.Label(Model.Doc_Name, new { style = "color:cadetblue !important" })  <br />
                @Html.Label(Model.Qualification, new { style = "color:cadetblue !important" })  <br />

            </td>
        </tr>
    </table>
    <h2></h2>
    <table style="border-collapse: collapse; border-spacing: 0 15px; border: double" width="90%" align="center" cellspacing=1 cellpadding=1>
        <tr style="border: double; border-width: 1px 0;">
            <td>
                @Html.Label("Sr No :- ", new { style = "color:Black; text-decoration:underline; " })
                @Html.Label(Model.Srno.ToString(), new { style = "color:Black; font-weight: normal;" })
            </td>
            <td>
                @Html.Label("Date:-", new { style = "color:Black ; text-decoration:underline;" })
                @DateTime.Now
            </td>
        </tr>
        <tr style="border: double; border-width: 1px 0;">
            <td><h2></h2></td>
            <td>
            </td>
        </tr>
        <tr style="border: double; border-width: 1px 0;">
            <td>
                @Html.Label("Pt. Name :- ", new { style = "color:Black ; text-decoration:underline;" })
                @Html.Label(Model.Pname, new { style = "color:Black; font-weight: normal;" })
            </td>
            <td>
                @Html.Label("Age :-", new { style = "color:Black ; text-decoration:underline;" })
                @Html.Label(Model.Age.ToString(), new { style = "color:Black; font-weight: normal;" })
            </td>
        </tr>
        <tr style="border: double; border-width: 1px 0;">
            <td><h2></h2></td>
            <td>
            </td>
        </tr>
        <tr style="border:double; border-width: 1px 0;">
            <td>
                @Html.Label("Ref. By DR :-", new { style = "color:Black ; text-decoration:underline; " })
                @Html.Label(Model.RefByDoc, new { style = "color:Black; font-weight: normal;" })
            </td>
            <td>
                @Html.Label("Gender :-", new { style = "color:Black ; text-decoration:underline;" })
                @Html.Label(Model.Gender, new { style = "color:Black; font-weight: normal;" })
            </td>
        </tr>
    </table>
    <hr style="position: relative; border: none; top: 5px; height: 2px; background: black !important; margin-bottom: 5px; " />
    <table width="100%" height="10%">
        <tr>
            <td align="center">
                @Html.Label("COMPLETE BLOOD PICTURE REPORT (CBP) ", new { style = "color:Black; text-decoration:underline; " })
            </td>
        </tr>
    </table>
    <hr style="position: relative; border: none; top: 1px; height: 2px; background: black !important; margin-top: 1px; " />

    <table width="100%">
        <tr>
            <td align="center">
                @Html.Label("PARAMETERS ", new { style = "color:Black; text-decoration:underline; " })
            </td>
            <td align="center">
                @Html.Label("RESULT ", new { style = "color:Black; text-decoration:underline; " })
            </td>
            <td align="center">
                @Html.Label("REFERENCE RANGES ", new { style = "color:Black; text-decoration:underline; " })
            </td>
        </tr>


        <tr>

            <td align="center">
                @Html.Label("Haemoglobin gm %", new { style = "color:Black; font-weight: normal; font-size:smaller;" })
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">@Model.haemoglobin gm %</label>
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">M: 14-18.0 gm %</label>
            </td>
        </tr>
        <tr>
            <td align="center">
            </td>
            <td align="center">
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">F: 11.5-16.0 gm %</label>
            </td>
        </tr>
        <tr>
            <td align="center">
                @Html.Label("Erythrotyte count (RBC)", new { style = "color:Black; font-weight: normal; font-size:smaller;" })
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">@Model.erythrocyteCount Mill/cumms</label>
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">M: 4.5-6.5 Mill/cumms</label>
            </td>
        </tr>
        <tr>
            <td align="center">
            </td>
            <td align="center">
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">F: 3.8-5.5 Mill/cumms</label>
            </td>
        </tr>
        <tr>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">Total W.B.C. Count</label>
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">@Model.totalWBCCount /cumms</label>
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">4,000-11,000/cumms </label>
            </td>
        </tr>

        <tr>
            <td align="center" colspan="3">
                @Html.Label("DIFFERENTIAL LEUCOCYTE COUNT ", new { style = "color:Black; text-decoration:underline; " })
            </td>

        </tr>
        <tr>
            <td align="center">
                @Html.Label("Neutrophils", new { style = "color:Black; font-weight: normal; font-size:smaller;" })
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">@Model.neutrophils %</label>
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">Adults: 40-75%</label>
            </td>
        </tr>
        <tr>
            <td align="center">
            </td>
            <td align="center">
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">Childrens: 36-50%</label>
            </td>
        </tr>
        <tr>
            <td align="center">
                @Html.Label("Lymphocytes", new { style = "color:Black; font-weight: normal; font-size:smaller;" })
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">@Model.lymphocytes %</label>
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">Adults: 20-40%</label>
            </td>
        </tr>
        <tr>
            <td align="center">
            </td>
            <td align="center">
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">Childrens: 36-50%</label>
            </td>
        </tr>
        <tr>
            <td align="center">
                @Html.Label("Eosinophils", new { style = "color:Black; font-weight: normal; font-size:smaller;" })
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">@Model.eosinophils %</label>
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">1-6% </label>
            </td>
        </tr>
        <tr>
            <td align="center">
                @Html.Label("Monocytes", new { style = "color:Black; font-weight: normal; font-size:smaller;" })
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">@Model.monocytes %</label>
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">2-8% </label>
            </td>
        </tr>
        <tr>
            <td align="center">
                @Html.Label("Basophils", new { style = "color:Black; font-weight: normal; font-size:smaller;" })
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">Not Found</label>
            </td>
            <td align="center">
            </td>
        </tr>

        <tr>
            <td align="center" colspan="3">
                @Html.Label("PERIPHERAL SMEAR EXAMINATION", new { style = "color:Black; text-decoration:underline; " })
            </td>

        </tr>
        <tr>
            <td align="center">
                @Html.Label("R B C 's", new { style = "color:Black; font-weight: normal; font-size:smaller;" })
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">@Model.rbcs</label>
            </td>
            <td>
                &nbsp;
            </td>
        </tr>

        <tr>
            <td align="center">
                @Html.Label("Platelet Count", new { style = "color:Black; font-weight: normal; font-size:smaller;" })
            </td>
            <td align="center">
                <label style="color:Black; font-weight: normal; font-size:smaller;">@Model.plateletCount /cumms</label>
            </td>
            <td align="center">
                <label style="color: Black; font-weight: normal; font-size: smaller;">1.5-5.0 Lakhs/cumms</label>
            </td>
        </tr>
        <tr>

            <td align="center" colspan="3">
                <label style="color: Black; font-weight: normal; font-size: smaller;">Platelet Adequate on Smear.</label>
            </td>

        </tr>

    </table>
    <table width="100%">

        <tr>
            <td width="40%" align="center">
                -
                <label style="color: Black; font-weight: normal; font-size: smaller; "><b><u>Methodology:-</u></b> Electronic Cell Counter <br /> & Microscopy.</label>

            </td>
            <td width="40%">
                <label style="color: Black; font-weight: normal; font-size: smaller; "></label>
            </td>

            <td align="left" width="20%"></td>

        </tr>
